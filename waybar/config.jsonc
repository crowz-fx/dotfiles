// -*- mode: jsonc -*-
{
  // "layer": "top", // z-index > all windows
  // "position": "bottom", // top|bottom|left|right
  "height": 30, // empty = auto height
  // "width": 1280, // empty = auto width
  "spacing": 2, // margin between modules
  "reload_style_on_change": true,
  "modules-left": [
    "hyprland/workspaces",
    "custom/power",
    "idle_inhibitor",
    "custom/packages",
    // "custom/weather",
    // "user",
    // "temperature",
    "cpu",
    "custom/gpu",
    "memory",
    "network",
    // "disk#root",
    // "disk#storage",
    // "keyboard-state",
    "hyprland/submap"
    // "custom/media"
  ],
  "modules-center": ["hyprland/window"],
  "modules-right": [
    // "custom/spotify",
    "tray",
    // "mpd",
    "wireplumber",
    "custom/mic",
    // "power-profiles-daemon",
    "clock#ny",
    "clock#lon",
    "clock#jpy"
  ],
  // modules configuration
  "hyprland/window": {
    "format": "{title}",
    "separate-outputs": true,
    "rewrite": {
      "(.*) ‚Äî Mozilla Firefox": "Mozilla Firefox",
      "(.*) - Visual Studio Code": "$1"
    }
  },
  "disk#root": {
    "format": "/ {specific_used:0.2f}/{specific_total:0.1f}GB",
    "unit": "GB",
    "path": "/"
  },
  "disk#storage": {
    "format": "~/storage {specific_used:0.2f}/{specific_total:0.1f}TB",
    "unit": "TB",
    "path": "/drives/2tb-seagate-ZFL4QQ72"
  },
  "keyboard-state": {
    "numlock": true,
    "capslock": true,
    "format": "{name} {icon}",
    "format-icons": {
      "locked": "ÔÄ£",
      "unlocked": "ÔÇú"
    }
  },
  "mpd": {
    "format": "{stateIcon} {consumeIcon}{randomIcon}{repeatIcon}{singleIcon}{artist} - {album} - {title} ({elapsedTime:%M:%S}/{totalTime:%M:%S}) ‚∏®{songPosition}|{queueLength}‚∏© {volume}% ÔÄÅ",
    "format-disconnected": "Disconnected ÔÄÅ",
    "format-stopped": "{consumeIcon}{randomIcon}{repeatIcon}{singleIcon}Stopped ÔÄÅ",
    "unknown-tag": "N/A",
    "interval": 5,
    "consume-icons": {
      "on": "ÔÉÑ "
    },
    "random-icons": {
      "off": "<span color=\"#f53c3c\">ÔÅ¥</span> ",
      "on": "ÔÅ¥ "
    },
    "repeat-icons": {
      "on": "ÔÄû "
    },
    "single-icons": {
      "on": "ÔÄû1 "
    },
    "state-icons": {
      "paused": "ÔÅå",
      "playing": "ÔÅã"
    },
    "tooltip-format": "MPD (connected)",
    "tooltip-format-disconnected": "MPD (disconnected)"
  },
  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "üîõ",
      "deactivated": "üì¥"
    }
  },
  "tray": {
    // "icon-size": 21,
    "spacing": 10,
    "show-passive-items": true
  },
  "clock#ny": {
    "timezone": "America/New_York",
    "tooltip": false
  },
  "clock#lon": {
    "timezone": "Europe/London",
    "tooltip": true,
    "format": "{:%d/%m/%y %H:%M:%S}",
    "interval": 1,
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "calendar": {
      "mode": "year",
      "mode-mon-col": 3,
      "weeks-pos": "left",
      "on-scroll": 1,
      "format": {
        "months": "<span color='#ffead3'><b>{}</b></span>",
        "days": "<span color='#ecc6d9'><b>{}</b></span>",
        "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
        "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
        "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
      }
    },
    "actions": {
      "on-click-right": "mode",
      "on-click-forward": "tz_up",
      "on-click-backward": "tz_down",
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down"
    }
  },
  "clock#jpy": {
    "timezone": "Japan",
    "tooltip": false
  },
  "cpu": {
    "interval": 1,
    "format": "CPU:{usage}%",
    "tooltip": false
  },
  "memory": {
    "interval": 1,
    "format": "MEM:{used:0.1f}/{total:0.1f}G"
  },
  "temperature": {
    // "thermal-zone": 2,
    // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
    "critical-threshold": 80,
    // "format-critical": "{temperatureC}¬∞C {icon}",
    "format": "CPU:{temperatureC}¬∞C"
    // "format-icons": [
    //     "Ôù´",
    //     "Ôãâ",
    //     "Ôù©"
    // ]
  },
  "backlight": {
    // "device": "acpi_video1",
    "format": "{percent}% {icon}",
    "format-icons": ["Óéç", "Óèì", "Óèë", "Óèè", "Óèé", "Óèç", "Óèä", "Óèà", "Óéõ"]
  },
  "network": {
    // "interface": "wlp2*", // (Optional) To force the use of this interface
    // "format-wifi": "{essid} ({signalStrength}%) Ôá´",
    // "format-ethernet": "{ipaddr}/{cidr} Ôûñ",
    // "tooltip-format": "{ifname} via {gwaddr} Ôûñ",
    // "format-linked": "{ifname} (No IP) Ôûñ",
    // "format-disconnected": "Disconnected ‚ö†",
    // "format-alt": "{ifname}: {ipaddr}/{cidr}"
    "format": "‚¨áÔ∏è:{bandwidthDownBits} ‚¨ÜÔ∏è:{bandwidthUpBits}",
    "interval": 1
  },
  "wireplumber": {
    "scroll-step": 5, // %, can be a float
    "format": "{volume}% {node_name}",
    "format-muted": "üîá {node_name}",
    "max-volume": "100",
    "tooltip": false,
    "format-icons": {
      "headphones-lineout": "üéß",
      "monitor-hdmi1": "üñ•Ô∏è",
      "monitor-hdmi2": "üñ•Ô∏è"
    },
    "on-click": "$HOME/.config/bin/handle-audio output toggle",
    "on-click-middle": "$HOME/.config/bin/handle-audio output mute",
    "on-click-right": "$HOME/.config/bin/handle-audio gui"
  },
  "custom/mic": {
    "interval": 1,
    "format": "{}",
    "format-muted": "{} üîá",
    "return-type": "json",
    "exec": "$HOME/.config/bin/handle-audio input get",
    "on-click-middle": "$HOME/.config/bin/handle-audio input mute"
  },
  "custom/media": {
    "format": "{icon} {text}",
    "return-type": "json",
    "max-length": 40,
    "format-icons": {
      "spotify": "SPOT",
      "default": "üéú"
    },
    "escape": true,
    "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
    // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
  },
  "custom/power": {
    "format": "‚èèÔ∏è",
    "tooltip": true,
    "tooltip-format": "Trigger System Menu",
    "on-click": "$HOME/.config/bin/trigger-system-action menu"
  },
  "custom/gpu": {
    "interval": 1,
    "format": "GPU:{}%",
    "exec": "$HOME/.config/bin/get-stats",
    "tooltip": false
  },
  "custom/weather": {
    "interval": 600,
    "exec": "curl 'https://wttr.in/London?format=2'"
  },
  "custom/spotify": {
    "format": "{}",
    "escape": true,
    "return-type": "json",
    "max-length": 40,
    // "interval": 30, // Remove this if your script is endless and write in loop
    "on-click": "playerctl -p spotify play-pause",
    "on-click-right": "killall spotify",
    "smooth-scrolling-threshold": 10, // This value was tested using a trackpad, it should be lowered if using a mouse.
    "on-scroll-up": "playerctl -p spotify next",
    "on-scroll-down": "playerctl -p spotify previous",
    "exec": "$HOME/.config/waybar/custom_modules/mediaplayer.py 2> /dev/null",
    "exec-if": "pgrep spotify"
  },
  "custom/packages": {
    "interval": 3600,
    "format": "{}",
    "return-type": "json",
    "exec": "$HOME/.config/waybar/custom_modules/packages.py 2> /dev/null",
    "tooltip": true,
    "hide-on-empty-text": true
  }
}
