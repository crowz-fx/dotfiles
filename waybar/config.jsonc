    "tooltip-format-disconnected": "MPD (disconnected)"
  },
  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "üîõ",
      "deactivated": "üì¥"
    }
  },
  "tray": {
    // "icon-size": 21,
    "spacing": 10
  },
  "clock#ny": {
    "timezone": "America/New_York",
    "tooltip": false
  },
  "clock#lon": {
    "timezone": "Europe/London",
    "tooltip": false,
    "format": "{:%H:%M:%S}",
    "interval": 1
  },
  "clock#jpy": {
    "timezone": "Japan",
    "tooltip": false
  },
  "cpu": {
    "format": "CPU:{usage}%",
    "tooltip": false
