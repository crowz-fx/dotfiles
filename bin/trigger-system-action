#!/bin/bash

. ~/.config/bin/includes/utils.sh
script_title="Trigger System Action"

notif() {
  send_notif "$script_title" "$@"
}

if [ -z "$1" ]; then
  notif "Didn't supply an option"
  exit 1
fi

action=$1

if [[ "$action" == "menu" ]]; then
  notif "Open Menu"
  pidof wlogout || wlogout -P 3 -p layer-shell
elif [[ "$action" == "lock" ]]; then
  notif "Locking PC"

  # keyring doesn't lock on lock, dumb, so force a lock of all keyrings/collections
  dbus-send --dest=org.gnome.keyring \
    --print-reply \
    /org/freedesktop/secrets \
    org.freedesktop.Secret.Service.LockService

  pidof hyprlock || hyprlock
fi
